{
  "version": "2.0.0",
  "tasks": [
    // https://github.com/apple/swift-docc-plugin#previewing-documentation
    {
      "type": "shell",
      "command": "swift",
      "args": [
        "package",
        "--disable-sandbox",
        "preview-documentation",
        "--target",
        "VoltorbFlipKit"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$swiftc"],
      "label": "swift: Preview Documentation for `VoltorbFlipKit`",
      "detail": "Preview DocC Documentation for the `VoltorbFlipKit` target"
    }
  ]
}
